@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    @* Text Title *@
    <div class="text-center">
        <h1>All Products</h1>
    </div>
    @* Product Cards *@
    <div class="d-flex">
        @{
            foreach(Product p in ViewBag.AllProducts)
            {
                <div class="card-group">
                    <div class="card d-flex justify-content-center" style="width: 400px;">
                        <div class="card-body">
                            <img height="250px" width="250px class="card-img-top" src="@p.ImageUrl" alt="@p.Artist-@p.Title">
                            <h4 class="card-title"><a href="/@p.ProductId/info">@p.Artist - @p.Title </a> </h4>
                            <p class="card-text">@p.Label</p>
                            <p class="card-text">$@p.Price</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>