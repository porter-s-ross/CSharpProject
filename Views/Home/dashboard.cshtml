@{
    ViewData["Title"] = "Home Page";
}

<div class="container p-3">
    @* Text Title *@
    <div class="text-center">
        <h1 class="m-3">All Products</h1>
    </div>
    @* Product Cards *@
    <div class="d-flex justify-content-center">
        @{
            foreach(Product p in ViewBag.AllProducts) @*looping through All Products, and creating "card" for each one*@
            {
                <div class="card-group m-2">
                    <div class="card d-flex justify-content-center" style="width: 400px; background-color: #fb92455c">
                        <div class="card-body mx-auto d-flex flex-column align-items-center">
                            <img height="250px" width="250px class="card-img-top" src="@p.ImageUrl" alt="@p.Artist-@p.Title">
                            <h4 class="card-title"><a href="/@p.ProductId/info">@p.Artist - @p.Title </a> </h4>
                            <p class="card-text">@p.Label</p>
                            <p class="card-text">$@p.Price</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>